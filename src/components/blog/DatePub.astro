---
interface Props {
  date: string | Date;
}

const { date } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<time datetime={new Date(date).toISOString()} class="text-sm text-zinc-600 dark:text-zinc-400">
  {formattedDate}
</time>