---
import Layout from "../layouts/Layout.astro";
import Experience from "../components/portfolio/Experience.astro";
import HeroIndex from "../components/portfolio/HeroIndex.astro";
import Contact from "../components/portfolio/Contact.astro";
import ListProjects from "../components/portfolio/ListProjects.astro";
const pageTitle = "Portafolio de Yehimy Daniela Velandia Fagua 🚀";
const description = "Un portafolio moderno y minimalista diseñado para desarrolladores y creativos digitales, adaptado para Yehimy Daniela Velandia Fagua.";
const ogimage = {
  url: "/images/imagedefault.webp",
  alt: "Captura de pantalla de un portafolio web con diseño moderno y oscuro. Presentando a Yehimy Fagua, Técnica en Programación de Software, destacando su pasión por el desarrollo y la tecnología. Incluye secciones de contacto, proyectos y un stack tecnológico con tecnologías como HTML5, JavaScript, TypeScript, Node.js, CSS, Tailwind, y más.",
};
---

<Layout pageTitle={pageTitle} description={description} ogimage={ogimage}>
  <HeroIndex />
  <Experience />
  <ListProjects />
  <Contact />
</Layout>